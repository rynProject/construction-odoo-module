<odoo>
    <data>

        <!-- Project Task Tree View -->
        <record id="view_project_task_tree" model="ir.ui.view">
            <field name="name">project.task.tree</field>
            <field name="model">project.task</field>
            <field name="arch" type="xml">
                <tree>
                    <field name="name"/>
                    <field name="deskripsi_tugas"/>
                    <field name="tanggal_mulai"/>
                    <field name="tanggal_selesai"/>
                    <field name="status_tugas" decoration-success="status_tugas == 'completed'" decoration-warning="status_tugas == 'ongoing'" decoration-muted="status_tugas == 'draft'" widget="badge" optional="show"/>
                    <field name="id_proyek"/>
                    <field name="id_manajer_tugas"/>
                    <field name="create_uid"/>
                </tree>
            </field>
        </record>

        <!-- Project Task Form View -->
        <record id="view_project_task_form" model="ir.ui.view">
            <field name="name">project.task.form</field>
            <field name="model">project.task</field>
            <field name="arch" type="xml">
                <form>
                    <sheet>
                        <group>
                            <field name="name"/>
                            <field name="deskripsi_tugas"/>
                            <field name="tanggal_mulai"/>
                            <field name="tanggal_selesai"/>
                            <field name="status_tugas"></field>
                            <field name="id_proyek"/>
                            <field name="id_manajer_tugas"/>
                        </group>
                    </sheet>
                </form>
            </field>
        </record>

        <!-- Action to Open the Project Task List View -->
        <record id="action_project_task" model="ir.actions.act_window">
            <field name="name">Project Task</field>
            <field name="res_model">project.task</field>
            <field name="view_mode">tree,form</field>
            <field name="view_id" ref="view_project_task_tree"/>
        </record>

        <!-- Menu for Project Task -->
        <menuitem id="menu_project_task_root" name="Project Task" parent="menu_construction"/>
        <menuitem id="menu_project_task_list" name="Task List" parent="menu_project_task_root" action="action_project_task"/>

    </data>
</odoo>
